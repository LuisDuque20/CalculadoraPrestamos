@model Prestamo

@{
    ViewData["Title"] = "Crear Prestamo";
}

<h2>Crear Prestamo</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Meses" class="form-label"></label>
        <input asp-for="Meses" class="form-control" />
        <span asp-validation-for="Meses" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Calcular Pr√©stamo
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Cancelar
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}