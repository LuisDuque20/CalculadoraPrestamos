@model Prestamo

@{
    ViewData["Title"] = "Nuevo Préstamo";
}

<div class="prestamo-form-wrapper">
    <div class="card shadow prestamo-card">

        <div class="prestamo-card-header">
            <h4 class="mb-0">Nuevo Préstamo</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label prestamo-label">
                        Monto del préstamo
                    </label>

                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Cantidad"
                               class="form-control prestamo-input"
                               placeholder="Ej. 10000" />
                    </div>

                    <span asp-validation-for="Cantidad"
                          class="text-danger prestamo-error"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Meses" class="form-label prestamo-label">
                        Plazo (meses)
                    </label>

                    <input asp-for="Meses"
                           class="form-control prestamo-input"
                           placeholder="Ej. 12" />

                    <span asp-validation-for="Meses"
                          class="text-danger prestamo-error"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit"
                            class="btn btn-success prestamo-btn-primary">
                        Calcular Préstamo
                    </button>

                    <a asp-action="Create"
                       class="btn btn-outline-secondary">
                        Limpiar formulario
                    </a>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
