<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Calculadora de Préstamos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/prestamos.css" asp-append-version="true" />

</head>
<body>

    <header class="border-bottom mb-4">
        <div class="container py-3">
            <h2 class="text-center m-0">Calculadora de Préstamos</h2>
        </div>
    </header>

    <main class="container pb-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top">
        © 2026 – Prueba Técnica ASP.NET Core MVC
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
